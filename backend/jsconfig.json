{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2022",
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@config/*": ["config/*"],
            "@controllers/*": ["controllers/*"],
            "@routes/*": ["routes/*"],
            "@services/*": ["services/*"],
            "@models/*": ["models/*"],
            "@middlewares/*": ["middlewares/*"],
            "@utils/*": ["utils/*"]
        }
    },
    "include": ["**/*.js"],
    "exclude": ["node_modules"]
}
